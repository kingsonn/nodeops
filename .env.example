# AutoDeFi.AI Environment Configuration

# ===== AI Configuration =====
# Groq API Key (for LLaMA 3.1 70B reasoning)
GROQ_API_KEY=your_groq_api_key_here
# AI Model Selection
AI_MODEL=llama-3.3-70b-versatile
AI_TEMPERATURE=0.3

# Vault Scheduler Configuration
VAULT_UPDATE_INTERVAL_HOURS=6
VAULT_REFRESH_ON_STARTUP=false

# ===== Database Configuration =====
DATABASE_URL=postgresql://user:password@localhost:5432/autodefi
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# ===== External APIs =====
DEFILLAMA_API_KEY=
COINGECKO_API_KEY=
OPENAI_API_KEY=

# ===== Backend Configuration =====
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# ===== Security =====
SECRET_KEY=your_secret_key_here_change_in_production
RATE_LIMIT_PER_MINUTE=60

# ===== Caching =====
CACHE_TTL=900
RATE_LIMIT=60

# ===== Feature Flags =====
FALLBACK_TO_RULE_ENGINE=true
